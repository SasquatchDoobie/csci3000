<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Gallery Rough Draft</title>
        <link rel="stylesheet" href="stylesheets/main.css">

    </head>

    <body>
        <header>
            <h1 id="gallery_name">Main Gallery</h1>
        </header>
        <div id="column_container">
            <div id="left_column">
                <h1 id="album_name">Albums</h1>
                <nav>
                    <button id="create_album_button"><h3>Create album</h3></button>
                    <div id="album_list">
                        <!--TODO: Inject albums with links here-->
                        <a href="/test" class="album_list_item"><p>My album</p></a>
                        <a href="/test" class="album_list_item">
                            <p>My album2</p>
                        </a>
                    </div>
                </nav>
            </div>
            <div id="right_column">
                <section id="file_upload">

                    <% if(uploadStatus == true) { %>
                        <label for="message" class="alert">Upload succesfull</label>
                    <% } %>

                    <form enctype="multi-part/form-data" method="post">

                        <input id="input" type="file" class="file" multiple="multiple" accept="image/png, image/jpg, image/jpeg, image/gif">

                        <button type="submit">Upload</button>

                    </form>

                    <form id="queue">

                        <div class="queue">
                            <button type="submit">Remove</button>
                        </div>

                    </form>
                
                </section>
            </div>
        </div>    
        <script src="scripts/script_test.js"></script>
    </body>
